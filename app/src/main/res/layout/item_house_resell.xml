<?xml version="1.0" encoding="utf-8"?>
<com.soujuw.android.partner.Views.ResellHousePreviewCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:scaleType="centerCrop"
                android:src="@drawable/house_preview" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#88ffffff"
                android:drawableLeft="@drawable/ic_camera"
                android:text="x12"
                android:textSize="8sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="高新区 3室1厅 精装 109㎡"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="2sp"
                    android:text="125.5"
                    android:textColor="@color/accent"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="万"
                    android:textColor="@color/accent"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="14sp"
                    android:text="3775元/㎡"
                    android:textColor="#B48"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location"
                android:gravity="bottom"
                android:lines="1"
                android:text="1.7公里 福景绿色智慧城"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>


</com.soujuw.android.partner.Views.ResellHousePreviewCard>