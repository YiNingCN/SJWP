<?xml version="1.0" encoding="utf-8"?>
<com.soujuw.android.partner.Views.ResellHousePreviewCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/preview_item_picture"
                android:layout_width="160sp"
                android:layout_height="90sp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_loading_16_9" />

            <TextView
                android:id="@+id/preview_item_picture_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:background="#88ffffff"
                android:drawableLeft="@drawable/ic_camera"
                android:text="x123"
                android:textSize="14sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/preview_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="高新区 3室1厅 精装 109㎡"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/preview_item_main_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="2sp"
                    android:text="125.5万"
                    android:textColor="@color/accent"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/preview_item_sub_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="14sp"
                    android:text="3775元/㎡"
                    android:textColor="#B48"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/preview_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location"
                    android:gravity="bottom"
                    android:lines="1"
                    android:text="1.7公里"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/preview_item_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:lines="1"
                    android:paddingLeft="8dp"
                    android:text="绿色智慧城"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</com.soujuw.android.partner.Views.ResellHousePreviewCard>